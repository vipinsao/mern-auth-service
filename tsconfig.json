{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["node", "jest"],
    "strictPropertyInitialization": false
  },
  "include": ["src", "tests"]
}
